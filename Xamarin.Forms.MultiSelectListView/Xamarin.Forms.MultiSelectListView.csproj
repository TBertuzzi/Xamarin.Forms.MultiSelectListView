<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>tbertuzzi</Authors>
    <Company>KBits</Company>
    <Description>Multi-select ListView Control to Xamarin.Forms</Description>
    <PackageLicenseUrl>http://opensource.org/licenses/MS-PL</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/TBertuzzi/Xamarin.Forms.MultiSelectListView</PackageProjectUrl>
    <PackageReleaseNotes>Include SelectedItemBehavior</PackageReleaseNotes>
    <Copyright>Copyright Â©2018 KBits</Copyright>
    <PackageTags>xamarin xamarin.forms controls listview</PackageTags>
    <PackageIconUrl>https://github.com/TBertuzzi/Xamarin.Forms.MultiSelectListView/blob/master/Resources/MultiSelectListViewIcon.png?raw=true</PackageIconUrl>
    <RepositoryUrl>https://github.com/TBertuzzi/Xamarin.Forms.MultiSelectListView</RepositoryUrl>
    <ApplicationIcon>MultiSelectListViewIcon.ico</ApplicationIcon>
    <Version>2.1.0</Version>
    <AssemblyVersion>2.1.0.0</AssemblyVersion>
    <FileVersion>2.1.0.0</FileVersion>
    <AssemblyInformationalVersion>2.1.0</AssemblyInformationalVersion>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Xamarin.Forms" Version="3.1.0.697729" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Behaviors\" />
  </ItemGroup>
</Project>
